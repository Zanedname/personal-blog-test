# 服务器配置
PORT=4000
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/personal-blog

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# 跨域配置
CORS_ORIGIN=http://localhost:3000

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log